.devise
  .inner
    %h2 ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", value:"testuser@gmail.com"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", value:"123456"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label "情報を登録する"
      .actions
        = f.submit "ログイン"